# Autoppia Worker Configuration
# Copy this file to .env and fill in your values

# AI Provider Configuration
# Chutes API is the primary AI provider (provides access to multiple models)
CHUTES_API_KEY=your_chutes_api_key_here
CHUTES_API_URL=https://api.chutes.ai

# Worker Configuration
WORKER_NAME=autoppia-miner
WORKER_VERSION=0.1.0
WORKER_DESCRIPTION=An Autoppia AI Worker for mining and processing tasks

# Bittensor Miner Configuration
# API URL for the HTTP worker (used by miner.py)
# Use your DigitalOcean VPS IP (e.g., http://134.199.203.133:8080)
API_URL=http://134.199.203.133:8080

# Logging
LOG_LEVEL=INFO

