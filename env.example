# Autoppia Miner Configuration
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080

# Miner Configuration
SUBNET_UID=36
NETWORK=finney
AXON_PORT=8091
API_URL=http://localhost:8080
API_TIMEOUT=90.0  # Updated to match validators (Nov 2025: increased from 30s to 90s)

# Wallet Configuration (REQUIRED for miner to register on network)
WALLET_NAME=your_wallet_name
WALLET_HOTKEY=your_hotkey_name

# Agent Configuration
AGENT_TYPE=hybrid  # template or hybrid (enhanced template agent)

# Logging
LOG_LEVEL=INFO

# Self-Learning Configuration (Optional)
SELF_LEARNING_ENABLED=true
SELF_LEARNING_INTERVAL=3600
