{
  "template": {
    "name": "autoppia-miner",
    "version": "0.1.0",
    "description": "An Autoppia AI Worker for mining and processing tasks",
    "author": "irun2themoney",
    "license": "MIT",
    "repository": "https://github.com/irun2themoney/autoppia-miner",
    "category": "mining",
    "tags": [
      "ai",
      "mining",
      "processing",
      "framework-agnostic"
    ],
    "framework": "framework-agnostic",
    "privacy_preserving": true,
    "capabilities": [
      "text_processing",
      "data_mining",
      "ai_generation"
    ],
    "configuration": {
      "schema": {
        "api_key": {
          "type": "string",
          "required": false,
          "description": "Autoppia API key for authentication"
        },
        "chutes_api_key": {
          "type": "string",
          "required": false,
          "description": "Chutes API key for AI generation"
        },
        "model": {
          "type": "string",
          "default": "gpt-4",
          "description": "AI model to use"
        },
        "max_tokens": {
          "type": "integer",
          "default": 1000,
          "description": "Maximum tokens for responses"
        },
        "temperature": {
          "type": "number",
          "default": 0.7,
          "description": "Temperature for AI generation"
        },
        "chutes_api_url": {
          "type": "string",
          "default": "https://api.chutes.ai",
          "description": "Chutes API base URL"
        }
      }
    },
    "requirements": {
      "python": ">=3.8",
      "dependencies": [
        "python-dotenv>=1.0.0",
        "pydantic>=2.0.0",
        "loguru>=0.7.0",
        "fastapi>=0.104.0",
        "uvicorn>=0.24.0",
        "httpx>=0.25.0"
      ]
    },
    "entry_point": "worker.py",
    "main_class": "AutoppiaWorker",
    "deployment": {
      "resources": {
        "cpu": "1",
        "memory": "512Mi"
      },
      "scaling": {
        "min_replicas": 1,
        "max_replicas": 10
      }
    },
    "examples": [
      {
        "name": "Mining Example",
        "description": "Example of using the worker for data mining",
        "request": {
          "task": "mine",
          "input_data": {
            "source": "example_source",
            "pattern": "example_pattern"
          }
        }
      },
      {
        "name": "Processing Example",
        "description": "Example of using the worker for data processing",
        "request": {
          "task": "process",
          "input_data": {
            "data": ["item1", "item2", "item3"]
          }
        }
      },
      {
        "name": "Generation Example",
        "description": "Example of using the worker for AI generation",
        "request": {
          "task": "generate",
          "input_data": {
            "prompt": "Generate a summary"
          }
        }
      }
    ]
  }
}

